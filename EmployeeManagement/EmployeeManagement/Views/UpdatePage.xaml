<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmployeeManagement.Views.UpdatePage">
    <ContentPage.ToolbarItems>
        <ToolbarItem  Order="Primary"  Text="Update Employee"  Command="{Binding OnUpdateCommand}" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <StackLayout >
            <Label Text="Please fill the following entries :"></Label>
            <Entry Text="{Binding CIN}"></Entry>
            <Entry  Text="{Binding Name}"></Entry>
            <Entry Text="{Binding GSM}"></Entry>
            <Entry  Text="{Binding Department}"></Entry>
        </StackLayout>
    </StackLayout>
</ContentPage>