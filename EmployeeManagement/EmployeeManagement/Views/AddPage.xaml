<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EmployeeManagement.Views.AddPage"
             BackgroundImage="back.png">
    <ContentPage.ToolbarItems>
        <ToolbarItem  Order="Primary"  Text="Add Employee"  Command="{Binding OnSubmitCommand}" />
    </ContentPage.ToolbarItems>
    <StackLayout>
        <StackLayout VerticalOptions="CenterAndExpand"  >
            <Label  Text="Please fill the following entries to add a new employee :" Style="{StaticResource TitleStyle}"></Label>
            <Entry Placeholder="CIN" Text="{Binding CIN}" Margin="40,0,40,10"  ></Entry>
            <Entry  Placeholder="Name" Text="{Binding Name}" Margin="40,0,40,10" ></Entry>
            <Entry Placeholder="GSM" Text="{Binding GSM}" Margin="40,0,40,10" ></Entry>
            <Entry  Placeholder="Department" Text="{Binding Department}" Margin="40,0,40,10"  ></Entry>
        </StackLayout>
    </StackLayout>
</ContentPage>